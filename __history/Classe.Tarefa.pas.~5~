unit Classe.Tarefa;

interface

uses System.Sysutils, Vcl.Dialogs, vVerTarefa;

type
  TTarefa = class

public
  Titulo : String;
  Categoria : String;
  Prazo : String;
  Pendente : boolean;
  procedure ExibirDetalhes();
end;

implementation
  procedure TTarefa.ExibirDetalhes;
  begin
    try
      TForm1.lblTituloVer.Caption := Titulo;
      TForm1.lblCategoriaVer.Caption := Categoria;
      TForm1.lblDataVer.Caption := Prazo;
    except
      Messagedlg('Não foi possível exibir os detalhes desta tarefa', mtError, [mbOK], 0);
    end;
  end;
end.
